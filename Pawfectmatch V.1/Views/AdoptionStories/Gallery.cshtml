@model List<Pawfectmatch_V._1.Models.AdoptionStory>
@{
    ViewData["Title"] = "Adoption Stories Gallery";
    var isAuthenticated = User.Identity.IsAuthenticated;
}
<div class="container py-5">
    <h2 class="mb-4 text-center" style="color:#ff5757;font-weight:700;">Adoption Stories Gallery</h2>
    <div class="text-center mb-4">
        @if (isAuthenticated)
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#postStoryModal">
                <i class="bi bi-plus-circle"></i> Post Your Story
            </button>
        }
        else
        {
            <a href="/User/Login" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Post Your Story
            </a>
        }
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var story in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100" tabindex="0" aria-label="Adoption story by @(story.Application?.ApplicantName ?? "Unknown") about @(story.Application?.Pet?.Name ?? "Unknown")">
                    @if (!string.IsNullOrEmpty(story.PhotoPath))
                    {
                        <img src="@story.PhotoPath" class="card-img-top" alt="Photo of @(story.Application?.Pet?.Name ?? "pet") for story by @(story.Application?.ApplicantName ?? "adopter")" style="height:180px;object-fit:cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title mb-1">@story.Title</h5>
                        <div class="mb-2 text-muted small">By: @(story.Application?.ApplicantName ?? "Unknown") | Pet: @(story.Application?.Pet?.Name ?? "Unknown") | Posted: @story.DatePosted.ToShortDateString()</div>
                        <p class="card-text">@story.StoryText.Substring(0, Math.Min(200, story.StoryText.Length))@(story.StoryText.Length > 200 ? "..." : "")</p>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4 text-center">No adoption stories have been shared yet. Be the first to share your story!</div>
    }
</div>

<!-- Modal for posting a story -->
@if (isAuthenticated)
{
    <div class="modal fade" id="postStoryModal" tabindex="-1" aria-labelledby="postStoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="postStoryModalLabel">Post Your Adoption Story</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="User" asp-action="ShareStory" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="ApplicationId" class="form-label">Select Adopted Pet</label>
                            <select name="ApplicationId" class="form-select" required>
                                <option value="">-- Select your adopted pet --</option>
                                @foreach (var app in (IEnumerable<Pawfectmatch_V._1.Models.AdoptionApplication>)ViewBag.EligibleAdoptions)
                                {
                                    <option value="@app.Id">@app.Pet?.Name (@app.Pet?.PetType) - Adopted on @app.SubmittedAt.ToShortDateString()</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Title" class="form-label">Title</label>
                            <input type="text" name="Title" class="form-control" maxlength="100" required />
                        </div>
                        <div class="mb-3">
                            <label for="StoryText" class="form-label">Your Story</label>
                            <textarea name="StoryText" class="form-control" rows="6" maxlength="2000" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Photo (optional)</label>
                            <input type="file" name="PhotoFile" class="form-control" accept="image/*" />
                        </div>
                        <div class="alert alert-info small">You must have an approved adoption to post a story.</div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Story</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
<!-- Add Bootstrap Icons CDN for icons if not already present -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> 