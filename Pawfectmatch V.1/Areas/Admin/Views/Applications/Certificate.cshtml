@model Pawfectmatch_V._1.Models.AdoptionApplication
@{
    Layout = null;
    var pet = Model.Pet;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Adoption Certificate</title>
    <style>
        body {
            font-family: 'Comic Sans MS', 'Comic Sans', cursive, Arial, sans-serif;
            background: linear-gradient(135deg, #ffe6e6 0%, #fffbe6 100%);
            color: #444;
            margin: 0;
            padding: 0;
        }
        .certificate-container {
            max-width: 700px;
            margin: 40px auto;
            background: #fff;
            border-radius: 32px;
            box-shadow: 0 8px 32px rgba(255,87,87,0.15), 0 1.5px 8px #ffb347;
            padding: 2.5rem 2.5rem 2rem 2.5rem;
            position: relative;
            border: 8px solid #ffb347;
        }
        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .logo {
            height: 70px;
        }
        .title {
            font-size: 2.5rem;
            font-weight: 900;
            color: #ff5757;
            letter-spacing: 2px;
            text-shadow: 1px 2px 0 #fffbe6, 2px 4px 0 #ffb347;
        }
        .pet-photo {
            display: block;
            margin: 1.5rem auto 1rem auto;
            border-radius: 50%;
            width: 160px;
            height: 160px;
            object-fit: cover;
            border: 6px solid #ffb347;
            box-shadow: 0 2px 12px #ffb34755;
        }
        .pet-name {
            font-size: 2rem;
            font-weight: 700;
            color: #ffb347;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        .details {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .adopter {
            font-size: 1.3rem;
            color: #ff5757;
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .date {
            font-size: 1.1rem;
            color: #888;
            text-align: center;
            margin-bottom: 2rem;
        }
        .footer {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-top: 2.5rem;
        }
        .signature {
            font-family: 'Pacifico', cursive, Arial, sans-serif;
            font-size: 1.5rem;
            color: #ffb347;
            border-top: 2px dashed #ffb347;
            width: 200px;
            text-align: center;
            margin-top: 1rem;
        }
        .cert-number {
            font-size: 0.95rem;
            color: #aaa;
            text-align: right;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
</head>
<body>
    <div class="certificate-container">
        <div class="header">
            <img src="/images/logo2.png" alt="PawfectMatch Logo" class="logo" />
            <span class="title">Adoption Certificate</span>
        </div>
        <img src="@(pet?.ImagePath ?? "/images/default.jpg")" alt="@pet?.Name's photo" class="pet-photo" />
        <div class="pet-name">@pet?.Name</div>
        <div class="details">
            <span><strong>Breed:</strong> @pet?.Breed</span> | 
            <span><strong>Type:</strong> @pet?.PetType</span>
        </div>
        <div class="adopter">
            This certifies that <span style="color:#ffb347">@Model.ApplicantName</span> has adopted <span style="color:#ff5757">@pet?.Name</span> into their loving home!
        </div>
        <div class="date">
            <strong>Date of Adoption:</strong> @Model.UpdatedAt?.ToString("MMMM dd, yyyy") ?? @Model.SubmittedAt.ToString("MMMM dd, yyyy")
        </div>
        <div class="footer">
            <div>
                <div class="signature">PawfectMatch Team</div>
                <div style="font-size:0.9rem;color:#aaa;">Shelter Representative</div>
            </div>
            <div class="cert-number">
                Certificate #: <span>@Model.Id</span>
            </div>
        </div>
    </div>
</body>
</html> 