@model List<Pawfectmatch_V._1.Models.AdoptionApplication>

<h2>Application Requests</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Applicant Name</th>
            <th>Email</th>
            <th>Pet</th>
            <th>Submitted</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.ApplicantName</td>
                <td>@app.Email</td>
                <td>@app.Pet?.Name</td>
                <td>@app.SubmittedAt.ToShortDateString()</td>
                <td>@app.ReqStatus</td>
                <td>
                    <a asp-action="Form" asp-route-id="@app.Id" class="btn btn-sm btn-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
